<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--  Gris clair  -->
    <Color x:Key="BackgroundLight">#cccccc</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />

    <!--  Presque blanc  -->
    <Color x:Key="BackgroundVeryLight">#e2e2e2</Color>
    <SolidColorBrush x:Key="BackgroundVeryLightBrush" Color="{StaticResource BackgroundVeryLight}" />

    <!--  bleu  -->
    <Color x:Key="ForegroundMain">#2196F3</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}" />

    <!--  bleu hover  -->
    <Color x:Key="ForegroundMainHover">#5eb7ff</Color>
    <SolidColorBrush x:Key="ForegroundMainBrushHover" Color="{StaticResource ForegroundMainHover}" />

    <!--  noir  -->
    <Color x:Key="ForegroundVeryDark">#000000</Color>
    <SolidColorBrush x:Key="ForegroundVeryDarkBrush" Color="{StaticResource ForegroundVeryDark}" />

    <!--  blanc  -->
    <Color x:Key="ForegroundLight">#ffffff</Color>
    <SolidColorBrush x:Key="IconsBrush" Color="{StaticResource ForegroundLight}" />

    <!--  rouge clair  -->
    <Color x:Key="ForegroundSelectionRed">#ef7858</Color>
    <SolidColorBrush x:Key="SelectionRedBrush" Color="{StaticResource ForegroundSelectionRed}" />

</ResourceDictionary>